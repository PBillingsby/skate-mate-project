<div class="page-grid">  
  <div class="main">
    <h2><%=user_name%></h2>
    <%=link_to "Edit", edit_user_path(@user)%></span>
    <p>You are currently located in <%=user_location%>.</p>

    <h3>Where are you skating today?</h3>
    <%=render "locations/form"%><br>
    <ul>
      <li>Click <%=link_to "here", locations_path%> to view all cities.</li>
    </ul>

    <h3>Search by</h3>

    <%=form_tag(location_path, method: "get") do%>
      <%=label_tag "City"%>
      <%=select( "location", "id",  Location.all.map { |p| ["#{p.city}, #{p.country}", p.id]}.uniq, { include_blank: true })%>
      <%=submit_tag "Search"%>
    <%end%>      
  </div>
  <div>
    <h3>Your Spots</h3>
    <%=check_in%>
  </div>
</div>