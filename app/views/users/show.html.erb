<%=user_auth%>
<div class="page-grid">  
  <div class="main">
    <h3><%=user_name%></h3>
    <%=link_to "Edit", edit_user_path(@user)%></span>
    <p>You are currently located in <%=user_location%>.</p>
  </div>
  <div class="spot-side">
    <h3>Where are you skating today?</h3>
    <%=render "locations/form"%><br>
    <ul>
      <li>Click <%=link_to "here", locations_path%> to view all cities.</li>
    </ul>

    <ul><h3>Your spots</h3>
      <%@user.spots.each do |spot|%>
        <li><%=link_to spot.name, spot%> - <%=spot.location.city%>, <%=spot.location.country%></li>
      <%end%>
    <ul>
    <h3>Search by rating</h3>
    <%=form_tag(spots_path, :method => "get") do%>
      <%=select_tag :search, options_for_select((1..5)), prompt: "-"%><br>
      <%=submit_tag "Search"%>
    <%end%>

    <div class="spot-view">
      <%spots.each do |spot|%>
        <div><p><%=link_to spot.name, spot%></p>
        <%=image_tag(spot.image, class: 'image-box')%></div>
      <%end%>
    </div>
  </div>
</div>
