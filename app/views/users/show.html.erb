<div class="main-page-grid">  
  <div class="main">
    <h2>Welcome back, <%=current_user.username%>.</h2>
    <sup><%=link_to "Edit", edit_user_path(current_user)%></sup>
    <p>You are currently located in <%=user_location%>.</p>
    <%if @current_user_check_in%>
      <p>Check In Note: <%=@current_user_check_in.notes%></p>
    <%end%>
    <div class="check-in-box">
      <div>
        <h3>Check In</h3>
        <p>Where will you be skating today?</p>
        <%=form_for :check_in, url: user_check_ins_path(current_user), :method => :post do |f|%>
          <%=f.text_field :city, placeholder: "City - eg. Paris"%><br>
          <%=f.text_area :notes, placeholder: :notes, cols: "18", rows: "3"%><br>
          <%=f.submit "Check In"%>
        <%end%>
      </div>
      <div>
        <h3>Add Spot</h3>
        <%=form_for @spot do |f|%>
          <%=render 'layouts/shared_errors', form_object:@spot%>
          <%=f.hidden_field :user_id, :value => current_user.id %>
          <%=f.fields_for :location, @location do |ff|%>
            <%=ff.text_field :city, placeholder: :city%>
          <%end%><br>
          <%=render 'spots/form', f:f%>
        <%end%>
      </div>
    </div>
  </div>
  <div>
    <h2>Your Spots</h2>
    <%if current_user.spots%>
      <%=check_in%> <!--user helpers for user spots iterator-->
    <%end%>
  </div><br>
</div>