<div class="centered"> 
  <h1 class="blue-text">Skate-Mate</h1>
  <ul class="login-form"><%=form_for User.new do |f|%>
    <h3><u>Sign Up</u></h3>
    <li><%=f.text_field :username, placeholder: :username%></li>
    <li><%=f.text_field :email, placeholder: :email%></li>
    <li><%=f.password_field :password, placeholder: :password%></li>
    <li><%=f.password_field :password_confirmation, placeholder: :password_confirmation%></li>
    <li><%=f.submit%></li>
  <%end%></ul>
  <h3><u>Existing Users</u></h3>
  <%=link_to 'Log In', login_path%><br><br>
  <%=link_to 'Sign In with Facebook', '/auth/facebook'%>
</div>