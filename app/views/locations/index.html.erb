  <h1>Locations:</h1><br>
  <ul><%@locations.each do |loc|%>
    <li><%=link_to loc.city, loc%>, <%=loc.city%>, <%=loc.country%></li>
    <li>Spot count: <%=loc.spots.count%></li>
    <%if loc.spots.count > 1%>
      <%=form_tag(spot_path(loc), method :get) do%>
        <li><%=collection_select :spots, :spot_id, loc.spots, :id, :name%></li>
        <li><%=submit_tag "View Spot"%></li><br>
      <%end%>
    <%end%><br>

  <%end%></ul>
