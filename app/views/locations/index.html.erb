<div class="black-border-box centered">  
  <h1>Locations</h1>
  <h4>Search for locations by country</h4>
  <%=render 'search'%><br>
  <%@locations.each do |loc|%>
  <div>
    <strong><%=link_to loc.city, loc%>, <%=loc.country%>.</strong><br>
    <div>Spot count: <%=loc.spots.count%></div>
  </div>
  <%end%>
</div>