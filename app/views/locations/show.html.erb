Skate Spots in <%=@location.city%>:<br>
<%@location.spots.each do |spot|%>
  <%=link_to spot.name, spot_path(spot)%><br>
<%end%>
<hr>
Users in your area
<ul><%@location.users.each do |user|%>
  <li><%=user.username%></li>
<%end%></ul>
<br>

<%=form_for @location.spots.create do |f|%>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :location_id, :value => @location.id %>
  <%=f.text_field :name, placeholder: :name%><br>
  <%=f.text_field :address, placeholder: :address%><br>
  <%=f.text_area :description, placeholder: :description%><br>
  <%=f.file_field :image%>
  <%=f.submit%>
<%end%>
