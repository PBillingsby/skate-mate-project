<%= form_for @comment, :method => :post do |f| %>
  <%=  f.hidden_field :spot_id, :value => @spot.id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.text_area :content, placeholder: 'Add content', :class => 'w-75' %><br>
  <%= f.submit "Add Comment", :class => 'mt-3' %>
<% end %>