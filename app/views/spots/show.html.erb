<div>  
  <h3><%=@spot.name%></h3>
  <p><%=@spot.address%>, <%=@spot.location.city%>, <%=@spot.location.country%>.</p>
  <p>Added by: <%=@spot.user.username%></p>
  <%-#<%=url_for @spot.image%>
  <span>
    Rating:
    <%if @spot.rating%>
      <%@spot.rating.times do  %>
      <%= octicon "star", class: "gold-star" %>
      <% end %>
    <%end%>
  </span>
  <%if @spot.user == current_user%>
    <%=link_to "Delete", :spot, method: :delete%>
    <%=link_to "Edit", edit_spot_path(@spot)%>
  <%end%>
  <%if @spot.image.attached?%>
    <%=image_tag(@spot.image)%>
  <%end%>

</div>

<div>
  <%=form_for @spot.comments.create do |f|%>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :spot_id, :value => @spot.id %>
    <%=f.text_field :content, placeholder: "Comment"%>
    <%=f.submit "Add Comment"%>
  <%end%>
</div>