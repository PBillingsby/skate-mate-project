<div class='spot-view margin-center'>
  <div class="centered">  
    <h2><%=@spot.name%></h2>
    <h4><b><%=@spot.address%>, <%=@spot.location.city%>, <%=@spot.location.country%>.</b></h4>
    <p class="spot-description margin-center"><%=@spot.description%></p><br>
    <span>
      Rating:
      <%if @spot.rating%>
        <%@spot.rating.times do  %>
        <%= octicon "star", class: "gold-star" %>
        <% end %>
      <%end%>
    </span>
    <p>Added by: <%=@spot.user.username%></p>
    <%if @spot.user == current_user%>
      <%=link_to "Delete", :spot, data: {confirm:'Are you sure you want to delete this spot?'}, method: :delete%>
      - <%=link_to "Edit", edit_spot_path(@spot)%>
    <%end%>
  </div>
  <div>
    <%if @spot.image.attached?%>
      <%=image_tag(@spot.image, :class => 'show-image')%>
    <%end%>
  </div>
  <div class="comment-box centered">
    <div>
      <h2><strong>Comments</strong></h2>
      <div class="comment-display">
        <%if @spot.comments.empty?%>
          <h4>No comments yet. Add comment below</h4>
        <%end%>
        <%@spot.comments.order('created_at DESC').each do |comment|%>
          <div class="centered">
            <p><%=comment.content%></p>
            <small><p>Posted - <%=comment.created_at.strftime('%B %d, %Y')%> by <%=comment.user.username%></p></small>
            <%if comment.user == current_user%>
              <sub><%=link_to "Delete", comment_path(comment), data: {confirm:'Are you sure you want to delete this comment?'}, method: :delete%></sub>
            <%end%>
          </div><hr>
        <%end%>
      </div>
    </div><br>
    <%=render 'comment'%>
  </div>
</div>