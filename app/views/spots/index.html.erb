<div class="black-border-box">
  <div class="text-center">
    <h2>Search spots by city</h2>
    <%= form_tag(spots_path, method: "get") do %>
      <%=  collection_select(:spot, :location_id, Location.all.order("city ASC"), :id, :city, { selected: "", disabled: "", prompt: "All Spots" })  %>
      <%= submit_tag "Search" %>
    <% end %><br>
    <%= link_to "Highest Rated Spots", highest_rated_path, action: "index" %>
  </div><br><hr>
  <div class="spot-index-view">
    <% @spots.each do |spot| %>
      <div>
        <div class="text-center"><h3><%= link_to spot.name, spot %></h3>
        <p><%= spot.address %> - <%= spot.location.city %>, <%= spot.location.country %></p></div>
      </div>
    <% end %>
  </div>
