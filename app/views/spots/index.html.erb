<div class="black-border-box">
  <%=form_tag(locations_path, method: "get") do%>
    <%=text_field_tag :country%>
    <%=submit_tag "Search"%>
  <%end%>
  <%@locations.each do |loc|%>
    <div class="centered">
      <h2><u><%=loc.city%></u></h2>
      <div class="spot-grid">
        <%loc.spots.each do |location_spot|%>
          <div><%=link_to location_spot.name, location_spot%>
          <h4><%=location_spot.address%></h4>
          <%if location_spot.image.attached?%>
            <%=image_tag(location_spot.image, :class => 'image-box')%>
          <%end%></div>
        <%end%>
      </div>
    </div>
  <%end%>
</div>
