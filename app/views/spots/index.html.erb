<div class="black-border-box">
  <div class="centered">
    <h2>Search spots by city</h2>
    <%=form_tag(spots_path, method: "get") do%>
      <%= collection_select(:spot, :location_id, Location.all.order("city ASC"), :id, :city, {include_blank: "All Spots"}) %>
      <%=submit_tag "Search"%>
    <%end%>
  </div><br><hr>
  <div class="spot-index-view">
    <%@spots.each do |spot|%>
      <div>
        <div class="centered"><h3><u><%=link_to spot.name, spot%></u></h3>
        <h4><%=spot.address%> - <%=spot.location.city%>, <%=spot.location.country%></h4></div>
      </div>
    <%end%>
  </div>
  <%if @spots.empty?%>
    <div class="centered">
      <p>No spots in <%=@index_location.city if @index_location%> yet</p>
      <p>Click <%=link_to "here", location_path(@index_location.id)%> to add a spot in <%=@index_location.city%></p>
    </div>
  <%end%>
</div>
